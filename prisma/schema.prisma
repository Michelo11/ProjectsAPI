generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Owner {
  id       Int       @id @default(autoincrement())
  token    String    @unique
  projects Project[]
  reviews  Review[]
}

model Project {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  images      Image[]
  owner       Owner   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId     Int
}

model Image {
  id        Int     @id @default(autoincrement())
  name      String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
  path      String
}

model Review {
  id      Int    @id @default(autoincrement())
  author  String
  comment String
  rating  Int
  owner   Owner  @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int
}
